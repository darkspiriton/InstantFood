
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
        >

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none" >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="#fff2f0e8"
                >

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instant food"
                    android:textSize="30dp"
                    android:textColor="#ff837a83"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    />

                <EditText
                    android:id="@+id/etCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:inputType="textPersonName"
                    android:layout_toRightOf="@+id/email"
                    android:layout_alignTop="@+id/email"
                    android:hint="Correo" />

                <EditText
                    android:id="@+id/etPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:inputType="textPassword"
                    android:layout_toRightOf="@+id/key"
                    android:layout_below="@+id/etCorreo"
                    android:layout_alignLeft="@+id/etCorreo"
                    android:hint="Contrase単a"
                    android:layout_marginTop="10dp"
                    />

                <Button
                    android:id="@+id/buttonIngresar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresar"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/etPass"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:background="#ff6e6563"
                    android:textColor="#ffffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="多Olvidaste tu contrase単a?"
                    android:id="@+id/tvLossPass"
                    android:layout_below="@+id/buttonIngresar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:clickable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="多Eres Nuevo? Registrate"
                    android:id="@+id/tvRegistro"
                    android:layout_below="@+id/tvLossPass"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:textIsSelectable="false"
                    android:password="false"
                    android:phoneNumber="false"
                    android:singleLine="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:src="@drawable/email"
                    android:layout_below="@+id/logo"
                    android:layout_marginTop="30dp"
                    android:paddingRight="5dp"


                     />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key"
                    android:src="@drawable/key"
                    android:layout_below="@+id/email"
                    android:layout_alignRight="@+id/email"
                    android:layout_alignBottom="@+id/etPass"
                    android:layout_marginTop="17dp"
                    android:paddingRight="5dp"

                     />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logo"
                    android:src="@drawable/ic_launcher"
                    android:layout_toLeftOf="@+id/tvTitulo"
                    android:layout_alignBottom="@+id/tvTitulo"/>

                <TextView
                    android:id="@+id/tvUsando"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="_________ Ingresa usando _________"
                    android:layout_below="@+id/tvRegistro"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logoFacebook"
                    android:src="@drawable/facebook"
                    android:layout_below="@+id/tvRegistro"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp" />
                <TextView
                    android:id="@+id/tvFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Facebook"
                    android:layout_below="@+id/logoFacebook"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
